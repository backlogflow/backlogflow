<p id="notice"> <%= notice %> </p>
<div class="project-info">
  <span id="project_id" class="hidden"><%= @project.id %></span>
  <div class="button new-epic" onclick="_gaq.push(['_trackEvent', 'new-epic', 'clicked'])">new epic</div>
  <div class="form">
    <%= render :partial => 'stories/form'%>
  </div>

  <div id="filter">
    <%= link_to  Project::Status[:DONE],   "/project/#{@project.id}/filter/#{Project::Status[:DONE]}",        :class => "status button done", :remote => true %>
    <%= link_to Project::Status[:DOING],    "/project/#{@project.id}/filter/#{Project::Status[:DOING]}",       :class => "status button doing", :remote => true %>
    <%= link_to  Project::Status[:TODO],   "/project/#{@project.id}/filter/#{Project::Status[:TODO]}",        :class => "status button todo", :remote => true %>
    <%= link_to                   "ALL",                         "/project/#{@project.id}/filter/All", :class => "status button clicked all", :remote => true %>        
    <%= image_tag "ajax-loader.gif", :title => "loading", :class => "loading" %>    
  </div>
</div>

<%= render :partial => 'stories_list' %>